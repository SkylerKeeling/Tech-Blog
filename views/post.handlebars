<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>

  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" id="titleInput" class="form-input" />

    <label class="form-label" for="post-body">Caption</label>
    <textarea name="post-body" id="captionInput" class="form-input"></textarea>

    <button type="submit" class="btn">Post</button>
  </form>

</div>

<script src="/js/post.js"></script>